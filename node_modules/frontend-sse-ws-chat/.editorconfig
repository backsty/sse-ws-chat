# Editor configuration, see https://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
quote_type = single
spaces_around_operators = true
spaces_around_brackets = inside

# HTML files
[*.{html,htm}]
indent_size = 2
quote_type = double

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2
quote_type = double

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows scripts
[*.{cmd,bat,ps1}]
end_of_line = crlf