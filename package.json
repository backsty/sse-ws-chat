{
  "name": "sse-ws-chat",
  "version": "1.0.0",
  "description": "sse-ws-chat",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/backsty/sse-ws-chat"
  },
  "main": "./src/frontend/index.js",
  "private": true,
  "scripts": {
    "start": "webpack serve --config webpack.dev.cjs",
    "build": "cross-env NODE_ENV=production webpack --config webpack.prod.cjs",
    "watch": "webpack --watch --config webpack.dev.cjs",
    "server:dev": "nodemon --exec node --require @babel/register src/backend/server.js",
    "server:prod": "cross-env NODE_ENV=production node src/backend/server.js",
    "dev": "concurrently \"yarn server:dev\" \"yarn start\"",
    "lint": "prettier --check \"src/**/*.{js,css,html,json}\"",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
    "predeploy": "yarn lint && yarn build",
    "deploy": "gh-pages -d dist",
    "clean": "rimraf dist",
    "prebuild": "yarn clean"
  },
  "keywords": [],
  "author": "backsty",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@types/koa-static": "^4.0.4",
    "@types/koa__cors": "^5.0.0",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "dotenv": "^16.4.7",
    "file-loader": "^6.2.0",
    "forever": "^4.0.3",
    "gh-pages": "^6.3.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.11",
    "url-loader": "^4.1.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "core-js": "^3.40.0",
    "date-fns": "^4.1.0",
    "http-event-stream": "^0.2.0",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-combine-routers": "^4.0.2",
    "koa-router": "^13.0.1",
    "koa-static": "^5.0.0",
    "nanoid": "^5.0.9",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "validator": "^13.12.0",
    "ws": "^8.16.0"
  },
  "homepage": "https://backsty.github.io/sse-ws-chat/"
}
