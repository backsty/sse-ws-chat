{
  "name": "sse-ws-chat",
  "version": "1.0.0",
  "description": "sse-ws-chat",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/backsty/sse-ws-chat"
  },
  "main": "./src/frontend/index.js",
  "private": true,
  "scripts": {
    "start": "webpack serve --config webpack.dev.cjs --mode development",
    "build": "webpack --config webpack.prod.cjs --mode production",
    "watch": "webpack --watch --config webpack.dev.cjs --mode development",

    "server:dev": "nodemon --experimental-modules src/backend/server.js",
    "server:prod": "cross-env NODE_ENV=production node src/backend/server.js",
    "dev": "concurrently \"yarn server:dev\" \"yarn start\"",

    "lint": "prettier --check \"src/**/*.{js,css,html,json}\"",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\"",

    "predeploy": "yarn lint && yarn build",
    "deploy": "gh-pages -d dist",

    "prerender:deploy": "yarn lint",
    "render:deploy": "git push render main",

    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "show:dist": "http-server dist",

    "start:prod": "yarn build && yarn server:prod"
  },
  "keywords": [],
  "author": "backsty",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/runtime": "^7.26.0",
    "babel-loader": "^9.2.1",
    "forever": "^4.0.3",
    "prettier": "^3.4.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "html-webpack-plugin": "^5.6.3",
    "html-loader": "^5.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^4.0.0",
    "nodemon": "^3.1.0",
    "concurrently": "^8.2.2",
    "rimraf": "^6.0.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1",
    "gh-pages": "^6.3.0",
    "cross-env": "^7.0.3",
    "terser-webpack-plugin": "^5.3.11",
    "dotenv": "^16.4.7"
  },
  "dependencies": {
    "koa": "^2.15.3",
    "koa-static": "^5.0.0",
    "koa-router": "^13.0.1",
    "ws": "^8.16.0",
    "nanoid": "^5.0.9",
    "core-js": "^3.40.0",

    "@koa/cors": "^5.0.0",
    "koa-body": "^6.0.1", 
    "koa-combine-routers": "^4.0.2",
    "uuid": "^9.0.1",
    "http-event-stream": "^0.2.0",
    "socket.io": "^4.8.1",
    "validator": "^13.12.0",
    "date-fns": "^4.1.0"
  },
  "homepage": "https://backsty.github.io/sse-ws-chat/"
}
